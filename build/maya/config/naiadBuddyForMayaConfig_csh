#set the maya module path
if ( $?MAYA_MODULE_PATH ) then
	setenv MAYA_MODULE_PATH /usr/exoticmatter/naiad-0.5.0.x86_64/maya/config
else
	setenv MAYA_MODULE_PATH /usr/exoticmatter/naiad-0.5.0.x86_64/maya/config:$MAYA_MODULE_PATH
endif

# Add the Naiad libs to the LD_LIBRARY_PATH path
if ( $?NAIAD_PATH ) then
	if ( ! $?LD_LIBRARY_PATH ) then
		setenv LD_LIBRARY_PATH $NAIAD_PATH/lib
	else
		setenv LD_LIBRARY_PATH $NAIAD_PATH/lib:$LD_LIBRARY_PATH
	endif
else
	echo "NAIAD_PATH is not set!"
endif

#set the path for the executable programs
setenv PATH /usr/exoticmatter/naiad-0.5.0.x86_64/maya/bin:$PATH

