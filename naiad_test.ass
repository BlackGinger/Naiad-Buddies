persp_camera
{
 name persp
 position 18 18 18 
 look_at 0 0 0
 up 0 0.7 0
 fov 60
}

sky
{
 name mysky
 color 1 1 1
 intensity 2.5
 color myhdri
 format angular
}

# find HDRI's from Debevec's page! http://ict.debevec.org/~debevec/Probes/
# change format to 
image
{
    name myhdri
    filename "/home/marcus/Downloads/rnl_probe.hdr"
}

options
{
 AA_samples 4
 GI_diffuse_samples 1
 xres 640
 yres 480
 background mysky

# GI_direct_lighting off
 GI_diffuse_depth 1
 GI_diffuse_samples 3
 GI_refraction_depth 2
 GI_reflection_depth 1

 shader_gamma 2.2
 light_gamma 2.2
 texture_gamma 2.2

 camera persp
 #outputs "RGBA RGBA filter testrender"
}

point_light
{
 name mylight
 position 8 8 -4
 intensity 0
 color 1 1 1
 radius 10
 samples 3
}

lambert
{
 name myshader
 Kd 0.8
 Kd_color 1 1 1
}

standard
{
 name myblu
 Kd 0.4
 Kd_color 0.1 0.5 1
 Ks 1
}

standard
{
 name mywater
 Kd  0
 Kr  1
 Kt  1
 IOR 1.3
 Fresnel on
}

standard
{
 name mymetal
 Kd 0
 Kr 0.6
}

implicit
{
 threshold 0
 samples   5
 name myimplicit
 min -18 -18 -18
 max  18  18  18
 field distance_field
 solver levelset
 ray_bias .01
 shader mywater
 shader mymetal
}

naiad_distance
{
 name     distance_field
 empcache /home/marcus/videos/naiad-fundamentals-1/ocean
 frame    60
 body     Particle-Liquid
 channel  fluid-distance
}
