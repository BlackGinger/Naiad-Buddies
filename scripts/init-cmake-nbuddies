#!/bin/bash

rm -rf $DEV_ROOT_NBUDDIES/stage-$EM_PLAT-$EM_ARCH
mkdir  $DEV_ROOT_NBUDDIES/stage-$EM_PLAT-$EM_ARCH
cd     $DEV_ROOT_NBUDDIES/stage-$EM_PLAT-$EM_ARCH

mkdir debug2011
mkdir debug2012

mkdir release2009
mkdir release2011
mkdir release2012

# all plugins linking to 2011 versions
cd $DEV_ROOT_NBUDDIES/stage-$EM_PLAT-$EM_ARCH/debug2011
cmake -DCMAKE_BUILD_TYPE=DEBUG -DMAYA_INSTALL_PATH=/usr/autodesk/maya2011-x64 -DMAYA_VERSION=2011 -DCMAKE_INSTALL_PREFIX=$NAIAD_PATH $DEV_ROOT_NBUDDIES

# all plugins linking to 2012 versions
cd $DEV_ROOT_NBUDDIES/stage-$EM_PLAT-$EM_ARCH/debug2012
cmake -DCMAKE_BUILD_TYPE=DEBUG -DMAYA_INSTALL_PATH=/usr/autodesk/maya2012-x64 -DMAYA_VERSION=2012 -DCMAKE_INSTALL_PREFIX=$NAIAD_PATH $DEV_ROOT_NBUDDIES

# all plugins linking to 2009 versions
cd $DEV_ROOT_NBUDDIES/stage-$EM_PLAT-$EM_ARCH/release2009
cmake -DCMAKE_BUILD_TYPE=RELEASE -DMAYA_INSTALL_PATH=/usr/autodesk/maya2009-x64 -DMAYA_VERSION=2009 -DCMAKE_INSTALL_PREFIX=$NAIAD_PATH $DEV_ROOT_NBUDDIES

# all plugins linking to 2011 versions
cd $DEV_ROOT_NBUDDIES/stage-$EM_PLAT-$EM_ARCH/release2011
cmake -DCMAKE_BUILD_TYPE=RELEASE -DMAYA_INSTALL_PATH=/usr/autodesk/maya2011-x64 -DMAYA_VERSION=2011 -DCMAKE_INSTALL_PREFIX=$NAIAD_PATH $DEV_ROOT_NBUDDIES

# all plugins linking to 2012 versions
cd $DEV_ROOT_NBUDDIES/stage-$EM_PLAT-$EM_ARCH/release2012
cmake -DCMAKE_BUILD_TYPE=RELEASE -DMAYA_INSTALL_PATH=/usr/autodesk/maya2012-x64 -DMAYA_VERSION=2012 -DCMAKE_INSTALL_PREFIX=$NAIAD_PATH $DEV_ROOT_NBUDDIES
